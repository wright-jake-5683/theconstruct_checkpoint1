<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rb1_robot">

    <xacro:include filename="my_rb1_robot_include.xacro" />

    <!-- Specify Gazebo color for the base_link -->
    <gazebo reference="base_link">
        <visual>
            <material> <!-- Black -->
                <ambient>0.1 0.1 0.1 1.0</ambient>
                <diffuse>0.1 0.1 0.1 1.0</diffuse>
                <specular>0.0 0.0 0.0 1.0</specular>
                <emissive>0.0 0.0 0.0 1.0</emissive>
            </material>
        </visual>
    </gazebo>

    <!-- Gazebo friction and material properties for left_wheel -->
    <gazebo reference="left_wheel">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.9</mu>
                        <mu2>0.9</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <!-- Gazebo friction and material properties for right_wheel -->
    <gazebo reference="right_wheel">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.9</mu>
                        <mu2>0.9</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <!-- Gazebo friction and material properties for front_caster -->
    <gazebo reference="front_caster">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <!-- Gazebo friction and material properties for back_caster -->
    <gazebo reference="back_caster">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <!-- Base footprint link -->
    <link name="base_footprint">
    </link>

    <!-- Joint connecting base_link and base_footprint -->
    <joint name="base_link_plate_joint" type="fixed">
        <origin xyz="0 0 .175" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>  
    </joint>


    <!-- Base link -->
    <link name="base_link">
        <xacro:inertial_cylinder mass="20" length=".3" radius=".25">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".25" length=".3"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".25" length=".3"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Joint connecting base_link and left_wheel -->
    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.2 -.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Left wheel link -->
    <link name="left_wheel">
        <xacro:inertial_cylinder mass="1" length=".04" radius=".025">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".025" length=".04"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".025" length=".04"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <!-- Joint connecting base_link and right_wheel -->
    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.2 -.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Right wheel link -->
    <link name="right_wheel">
        <xacro:inertial_cylinder mass="1" length=".04" radius=".025">
                <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".025" length=".04"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius=".025" length=".04"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <!-- Joint connecting base_link and front_caster -->
    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="0" />
    </joint>

    <!-- Front caster -->
    <link name="front_caster">
        <xacro:inertial_sphere mass="1" radius=".025">
                <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <!-- Joint connecting base_link and back_caster -->
    <joint name="base_link_back_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="0" />
    </joint>

    <!-- Back caster -->
    <link name="back_caster">
        <xacro:inertial_sphere mass="1" radius=".025">
                <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <!-- Gazebo tags - Laser scan -->
    <gazebo reference="base_link_front_laser_joint">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <!-- Joint connecting base_link and front_laser -->
    <joint name="base_link_front_laser_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.25 0 0.08" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Front Laser Link -->
    <link name="front_laser">
        <xacro:inertial_cylinder mass="1" length=".2" radius=".15"> 
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    
        <collision>
            <origin xyz="0 0 0" rpy="3.141593 0 0"/>
            <geometry>
                <cylinder radius="0.008" length="0.01"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0" rpy="3.141593 0 0" />
            <geometry>
                <cylinder radius="0.008" length="0.01"/>
            </geometry>
            <material name="gray"/>
        </visual>        
    </link>

    <!-- Laser Scanner Plugin -->
    <gazebo>
        <plugin
            filename="libignition-gazebo-sensors-system"
            name="ignition::gazebo::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>
    <gazebo reference="front_laser">
        <sensor type="gpu_lidar" name="head_hokuyo_sensor">
            <pose relative_to='lidar_frame'>0 0 0 0 0 0</pose>
            <always_on>1</always_on>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <topic>/laser/scan</topic>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
        </sensor>
    </gazebo>

    <!-- Differential Drive Plugin -->
    <!-- Wheel Separation = distance_between_wheel_joints -->
    <gazebo>
        <plugin
            filename="libignition-gazebo-diff-drive-system.so"
            name="ignition::gazebo::systems::DiffDrive">
            <left_joint>base_link_left_wheel_joint</left_joint>
            <right_joint>base_link_right_wheel_joint</right_joint>
            <wheel_separation>0.4</wheel_separation>
            <wheel_radius>0.025</wheel_radius>
            <odom_publish_frequency>20</odom_publish_frequency>
            <topic>cmd_vel</topic>
            <odom_topic>odom</odom_topic>
            <tf_topic>tf</tf_topic>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
        </plugin>
    </gazebo>

</robot>
